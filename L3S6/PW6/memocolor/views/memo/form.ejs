<%- include('../components/header'); -%>

<div class="container">
    <div class="card">
        <form class="create-form" method="POST">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" id="content">Text</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="color">Color</a>
                </li>
                <% if(!memo.content){%>
                <li class="nav-item">
                    <a class="nav-link" id="share">Share</a>
                </li>
                <% } %>
            </ul>
            <div class="card-body">

                <textarea class="form-control <% if(memo.color!=undefined){%>color-<%=memo.color.color%>-bg<%}%>" name="content" id="content-div"
                    placeholder="I need to do my homework..."><% if(memo){%><%=memo.content%><%}%></textarea>

                <div class="d-flex justify-content-center">
                    <div class="grid-colors" id="color-div">
                        <% for(let i=0; i<colors.length; i++){%>
                        <div class=" circle color-<%=colors[i].color%>-bg
                    <% if(memo.colorId==colors[i].id){%>circle-selected<%}%>" id="<%=colors[i].color%>"></div>
                        <% } %>
                    </div>
                    <input type="hidden" name="color" id="color-input" value="<% if(memo.color!=undefined){%><%=memo.color.color%><%}%>">
                </div>

                <div id="share-div">
                    <ul id="tags"></ul>
                    <div class="alert alert-success" role="alert">
                        1 for read and  2 for read & write
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <label class="input-group-text" for="rights">Rights:</label>
                        </div>

                        <select class="custom-select" id="rights" name="rights">
                          <option value="1" selected>1</option>
                          <option value="2">2</option>
                        </select>

                      </div>

                      <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="rights">Share with:</label>
                        </div>

                        <input class="form-control" type="text" id="share-input">
                      </div>
                    <ul class="list-group" id="result"></ul>
                    <input type="hidden" name="share" id="share-array">
                </div>

            <input class="btn btn-primary mt-3" type="submit" id="submit" value="<% if(memo.content){%>Update<%}else{%> Create<%}%>">

        </form>
    </div>
</div>
</div>
<script src="../assets/js/memo.js" type="text/javascript"></script>
<%- include('../components/footer'); -%>