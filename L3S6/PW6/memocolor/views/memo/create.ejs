<%- include('../components/header'); -%>

<div class="container">
    <div class="card">
        <form class="create-form" method="POST">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" id="content">Text</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="color">Color</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="share">Share</a>
                </li>
            </ul>
            <div class="card-body">

                <textarea class="form-control" name="content" id="content-div"
                    placeholder="I need to do my homework..."><% if(memo){%><%=memo.content%><%}%></textarea>

                <div class="d-flex justify-content-center">
                    <div class="grid-colors" id="color-div">
                        <% for(let i=0; i<colors.length; i++){%>
                        <div class="circle color-<%=colors[i].color%>-bg" id="<%=colors[i].color%>"></div>
                        <% } %>
                    </div>
                    <input type="hidden" name="color" id="color-input" value="white">
                </div>

                <div id="share-div">
                    <ul id="tags"></ul>
                    <input class="form-control" type="text" id="share-input">
                    <ul class="list-group" id="result"></ul>
                    <input type="hidden" name="share" id="share-array">
                </div>

                <input class="btn btn-primary" type="submit" id="submit" value="Create">

        </form>
    </div>
</div>
</div>
<script src="../assets/js/memo.js" type="text/javascript"></script>
<%- include('../components/footer'); -%>